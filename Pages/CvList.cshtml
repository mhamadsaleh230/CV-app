@page
@model Hw5forExam.Pages.CvListModel
@{
    ViewData["Title"] = "Cv list";
}

<style>
    .cv-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 30px;
    }

    .cv-card {
        border: 1px solid #ddd;
        padding: 15px;
        width: 200px;
        text-align: center;
        border-radius: 10px;
        background: #f9f9f9;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .cv-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .cv-name {
        margin-top: 10px;
        font-weight: bold;
        font-size: 1.1em;
    }

    .edit-btn, .delete-btn {
        margin-top: 10px;
        width: 80px;
        padding: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .edit-btn {
        background-color: #4CAF50;
        color: white;
    }

    .delete-btn {
        background-color: #f44336;
        color: white;
    }
</style>

<h2 class="title">List of CVs</h2>
<p>Total Cvs: @Model.CvList?.Count</p>
<div class="cv-container">
    @foreach (var cv in Model.CvList)
    {
        <div class="cv-card">
            <img src="~/uploads/@(string.IsNullOrEmpty(cv.PhotoFileName) ? "default.png" : cv.PhotoFileName)" alt="Cv Photo" class="cv-photo" />
            <div class="cv-name">@cv.FName @cv.LName</div>

            <form method="post" asp-page-handler="Edit">
                <input type="hidden" name="Id" value="@cv.Id" />
                <button type="submit" class="edit-btn">Edit</button>
            </form>

            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this CV?');">
                <input type="hidden" name="Id" value="@cv.Id" />
                <button type="submit" class="delete-btn">Delete</button>
            </form>
        </div>
    }
</div>
